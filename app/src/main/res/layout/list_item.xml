<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingLeft="16sp"
    android:paddingEnd="16sp"
    android:paddingRight="16sp"
    android:paddingBottom="16sp">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textSize="12sp"
            tools:text="J.K. Rowling" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:textSize="16sp"
            tools:text=" Harry Potter and the Philosopher's Stone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/country_code_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:lineSpacingMultiplier="2"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="IN" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/book_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="199.99" />

            <TextView
                android:id="@+id/currency_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="4sp"
                android:layout_marginEnd="8sp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="$" />

        </LinearLayout>

        <TextView
            android:id="@+id/publisher_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="12sp"
            tools:text="Oxford Publication" />

    </LinearLayout>

</LinearLayout>